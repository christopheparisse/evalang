<annotationBlock end="#T1" start="#T0" who="ADU" xml:id="au0">
<u>
<seg>j'ai soixante trois ans lorsque le neuf octobre 2012 </seg>
</u>
</annotationBlock>
<annotationBlock end="#T2" start="#T1" who="ADU" xml:id="au1">
<u>
<seg>après avoir eu des douleurs au sein gauche gauche pardon </seg>
</u>
</annotationBlock>
<annotationBlock end="#T3" start="#T2" who="ADU" xml:id="au2">
<u>
<seg>on me fait une mammographie </seg>
</u>
</annotationBlock>
<annotationBlock end="#T4" start="#T3" who="ADU" xml:id="au3">
<u>
<seg>suivie d'une échographie </seg>
</u>
</annotationBlock>
<annotationBlock end="#T5" start="#T4" who="ADU" xml:id="au4">
<u>
<seg>et évidemment d'une IRM de contrôle dans l'urgence </seg>
</u>
</annotationBlock>
<annotationBlock end="#T6" start="#T5" who="ADU" xml:id="au5">
<u>
<seg>qui va détecter </seg>
</u>
</annotationBlock>
<annotationBlock end="#T7" start="#T6" who="ADU" xml:id="au6">
<u>
<seg>une ACR5 tem- terme employé pour les patients </seg>
</u>
</annotationBlock>
<annotationBlock end="#T8" start="#T7" who="ADU" xml:id="au7">
<u>
<seg>afin de ne pas les affoler </seg>
</u>
</annotationBlock>
<annotationBlock end="#T9" start="#T8" who="ADU" xml:id="au8">
<u>
<seg>une ACR5 c'est un cancer </seg>
</u>
</annotationBlock>
<annotationBlock end="#T10" start="#T9" who="ADU" xml:id="au9">
<u>
<seg>moi il se situe au niveau du sein gauche </seg>
</u>
</annotationBlock>
<annotationBlock end="#T11" start="#T10" who="ADU" xml:id="au10">
<u>
<seg>tout de suite la machine médicale se met en route </seg>
</u>
</annotationBlock>
<annotationBlock end="#T12" start="#T11" who="ADU" xml:id="au11">
<u>
<seg>on commence par une biopsie </seg>
</u>
</annotationBlock>
<annotationBlock end="#T13" start="#T12" who="ADU" xml:id="au12">
<u>
<seg>et une cytoponction des ganglions axillaires gauches </seg>
</u>
</annotationBlock>
<annotationBlock end="#T14" start="#T13" who="ADU" xml:id="au13">
<u>
<seg>l'attente est vite compliquée </seg>
</u>
</annotationBlock>
<annotationBlock end="#T15" start="#T14" who="ADU" xml:id="au14">
<u>
<seg>car tout dépend des résultats </seg>
</u>
</annotationBlock>
<annotationBlock end="#T16" start="#T15" who="ADU" xml:id="au15">
<u>
<seg>pour savoir si ce cancer peut se soigner </seg>
</u>
</annotationBlock>
<annotationBlock end="#T17" start="#T16" who="ADU" xml:id="au16">
<u>
<seg>si il est hormono-dépendant </seg>
</u>
</annotationBlock>
<annotationBlock end="#T18" start="#T17" who="ADU" xml:id="au17">
<u>
<seg>si il n'est pas trop important </seg>
</u>
</annotationBlock>
<annotationBlock end="#T19" start="#T18" who="ADU" xml:id="au18">
<u>
<seg>et là commencent les moments de terreur </seg>
</u>
</annotationBlock>
<annotationBlock end="#T20" start="#T19" who="ADU" xml:id="au19">
<u>
<seg>mais je n'ai pas le droit de baisser les bras </seg>
</u>
</annotationBlock>
<annotationBlock end="#T21" start="#T20" who="ADU" xml:id="au20">
<u>
<seg>car autour de moi j'ai toute une famille </seg>
</u>
</annotationBlock>
<annotationBlock end="#T22" start="#T21" who="ADU" xml:id="au21">
<u>
<seg>pour qui je dois </seg>
</u>
</annotationBlock>
<annotationBlock end="#T23" start="#T22" who="ADU" xml:id="au22">
<u>
<seg>vaincre cette maladie </seg>
</u>
</annotationBlock>
<annotationBlock end="#T24" start="#T23" who="ADU" xml:id="au23">
<u>
<seg>mon mari est à coté de moi jour et nuit </seg>
</u>
</annotationBlock>
<annotationBlock end="#T25" start="#T24" who="ADU" xml:id="au24">
<u>
<seg>merci à lui pour toute cette aide </seg>
</u>
</annotationBlock>
<annotationBlock end="#T26" start="#T25" who="ADU" xml:id="au25">
<u>
<seg>je l'appelle mon ange gardien </seg>
</u>
</annotationBlock>
<annotationBlock end="#T27" start="#T26" who="ADU" xml:id="au26">
<u>
<seg>mes enfants mes petits-enfants sont très loin </seg>
</u>
</annotationBlock>
<annotationBlock end="#T28" start="#T27" who="ADU" xml:id="au27">
<u>
<seg>mais je sais qu'ils sont avec moi </seg>
</u>
</annotationBlock>
<annotationBlock end="#T29" start="#T28" who="ADU" xml:id="au28">
<u>
<seg>aussi le combat va commencer </seg>
</u>
</annotationBlock>
<annotationBlock end="#T30" start="#T29" who="ADU" xml:id="au29">
<u>
<seg>je vois l'oncologue suite aux résultats de cette biopsie </seg>
</u>
</annotationBlock>
<annotationBlock end="#T31" start="#T30" who="ADU" xml:id="au30">
<u>
<seg>qui indiquent que c'est un cancer donc du sein </seg>
</u>
</annotationBlock>
<annotationBlock end="#T32" start="#T31" who="ADU" xml:id="au31">
<u>
<seg>puis des j'ai un ganglion </seg>
</u>
</annotationBlock>
<annotationBlock end="#T33" start="#T32" who="ADU" xml:id="au32">
<u>
<seg>sentinelle qui est atteint </seg>
</u>
</annotationBlock>
<annotationBlock end="#T34" start="#T33" who="ADU" xml:id="au33">
<u>
<seg>c'est-à-dire qu'il est métastatique </seg>
</u>
</annotationBlock>
<annotationBlock end="#T35" start="#T34" who="ADU" xml:id="au34">
<u>
<seg>aussi il faut savoir faut contrôler </seg>
</u>
</annotationBlock>
<annotationBlock end="#T36" start="#T35" who="ADU" xml:id="au35">
<u>
<seg>si il n'y a pas de métastases dans le corps </seg>
</u>
</annotationBlock>
<annotationBlock end="#T37" start="#T36" who="ADU" xml:id="au36">
<u>
<seg>qui auraient pu être occasionnées par ce ganglion </seg>
</u>
</annotationBlock>
